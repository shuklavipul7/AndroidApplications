<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/mt1"
        android:hint="Type message to send"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/gallery"
        android:layout_alignBottom="@+id/addPhoto1"
        android:layout_toRightOf="@+id/addPhoto1"
        android:layout_toEndOf="@+id/addPhoto1"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:id="@+id/addMessage1" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/send"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:id="@+id/addPhoto1"
        android:layout_alignBottom="@+id/mt1"
        android:layout_toRightOf="@+id/mt1"
        android:layout_toEndOf="@+id/mt1" />
</RelativeLayout>
