<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_plan_trip"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="group16.mad.com.tripvisor.PlanTripActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/defaulttrip"
        android:layout_centerHorizontal="true"
        android:id="@+id/tripPicture"/>

    <TextView
        android:text="(Click on the image to change)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tripPicture"
        android:layout_marginTop="29dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@id/tripPicture"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:id="@+id/tripTitle"
        android:hint="Give a title to this trip" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/tripTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/tripLocation"
        android:hint="Enter trip location" />


    <Button
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tripLocation"
        android:layout_marginLeft="54dp"
        android:layout_marginTop="100dp"
        android:id="@+id/cancelButton"
        android:onClick="cancel"
        android:textAllCaps="false"/>

    <Button
        android:text="Lets Go!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tripLocation"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="100dp"
        android:id="@+id/createTripButton"
        android:onClick="createTrip"
        android:textAllCaps="false"/>


</RelativeLayout>
