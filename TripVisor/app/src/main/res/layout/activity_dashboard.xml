<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_dashboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="group16.mad.com.tripvisor.Dashboard"
    android:background="@drawable/dashboard1">


    <TextView
        android:id="@+id/nameInDashboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:textColor="@android:color/black"/>

    <ImageView
        android:id="@+id/avatarInDashboard"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignEnd="@+id/nameInDashboard"
        android:layout_alignLeft="@+id/nameInDashboard"
        android:layout_alignRight="@+id/nameInDashboard"
        android:layout_alignStart="@+id/nameInDashboard"
        android:layout_below="@+id/nameInDashboard"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/exploreFriends"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:text="Explore Friends"
        android:textAllCaps="false"
        android:textSize="30dp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/avatarInDashboard"
        android:onClick="openFriendsActivity"/>

    <Button
        android:id="@+id/tripsButton"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:text="Trips"
        android:layout_below="@+id/exploreFriends"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:textAllCaps="false"
        android:onClick="openTripsActivity"/>
</RelativeLayout>
